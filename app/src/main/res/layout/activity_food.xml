<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sam.gainsbysamcobcorperman.com.samuelstudios.gainsmaker.Food"
    android:background="@android:color/holo_red_dark"

    >

    <TextView
        android:text="@string/foodIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />
    <TextView
        android:text="@string/foodBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/title2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_below="@id/title"
        />
    <TextView
        android:text="@string/eggs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eggs"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_below="@id/title2"
        />
    <ImageView
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:id="@+id/eggsPic"
        android:layout_margin="8dp"
        android:layout_below="@+id/eggs"
        android:src="@drawable/eggs2"
        />
    <TextView
        android:text="@string/eggsBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/eggsBio"
        android:layout_below="@id/eggsPic"
        />
    <TextView
        android:text="@string/chicken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chicken"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_margin="8dp"
        android:textColor="@color/white"
        android:layout_below="@id/eggsBio"
        />
    <ImageView
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:id="@+id/chickPic"
        android:layout_margin="8dp"
        android:layout_below="@+id/chicken"
        android:src="@drawable/chicken2"
        />
    <TextView
        android:text="@string/chickenBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/chickenBio"
        android:layout_below="@id/chickPic"
        />
    <TextView
        android:text="@string/tuna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tuna"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_margin="8dp"
        android:textColor="@color/white"
        android:layout_below="@id/chickenBio"
        />
    <ImageView
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:id="@+id/tunaPic"
        android:layout_margin="8dp"
        android:layout_below="@+id/tuna"
        android:src="@drawable/tuna2"
        />
    <TextView
        android:text="@string/tunaBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/tunaBio"
        android:layout_below="@id/tunaPic"
        />
</RelativeLayout>
</ScrollView>