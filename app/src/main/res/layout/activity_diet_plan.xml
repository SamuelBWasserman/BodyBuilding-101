<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.samuelstudios.gainsmaker.DietPlan"
    android:background="@android:color/holo_red_dark">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addFoodBtn"
        android:text="@string/addFoodBtn"
        android:layout_marginTop="121dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"
        android:layout_alignParentStart="true"
        android:layout_marginStart="62dp"
        android:onClick="addButtonClicked" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/list"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_below="@+id/deleteFoodBtn"
        android:textStyle="bold"

        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_above="@+id/deleteFoodBtn"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textColor="@color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteFoodBtn"
        android:text="@string/deleteFoodBtn"
        android:layout_marginEnd="17dp"
        android:background="@android:color/black"
        android:onClick="deleteButtonClicked"
        android:layout_alignBaseline="@+id/addFoodBtn"
        android:layout_alignBottom="@+id/addFoodBtn"
        android:layout_alignEnd="@+id/editText" />


</RelativeLayout>
