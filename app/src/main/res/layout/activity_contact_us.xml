<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sam.gainsbysamcobcorperman.com.samuelstudios.gainsmaker.ContactUs"
    android:background="@android:color/holo_red_dark"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    >

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id8"
        android:layout_below="@+id/contactus1">
    </com.google.android.gms.ads.AdView>

    <TextView
        android:text="@string/contactUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactus1"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textAlignment="center"
        android:gravity="center"
        />
    <TextView
        android:text="@string/contactUs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactus2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="8dp"
        android:textAlignment="center"
        android:gravity="center"
        />
    <TextView
        android:text="@string/credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/credits"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"

        />

</RelativeLayout>
